<% layout("./layouts/boilerplate") %>

<div class="container my-5">
  <h2 class="mb-4 text-primary"><i class="fas fa-heart me-2"></i> My Wishlist</h2>

  <% if (wishlist.length > 0) { %>
    <div class="row g-4">
      <% wishlist.forEach(listing => { %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100">
            <!-- Image -->
            <a href="/listings/<%= listing._id %>">
              <img src="<%= listing.featuredImage?.url || 'https://placehold.co/400x300' %>" 
                   class="card-img-top" 
                   alt="<%= listing.title %>">
            </a>

            <!-- Card Body -->
            <div class="card-body">
              <h5 class="card-title">
                <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                  <%= listing.title %>
                </a>
              </h5>

              <!-- Location -->
              <p class="card-text text-muted mb-1">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= listing.city %>, <%= listing.country %>
              </p>

              <!-- Price -->
              <p class="card-text fw-bold text-primary mb-1">
                â‚¹<%= listing.price.toLocaleString() %> / <%= listing.stayType %>
              </p>

              <!-- Property & BHK -->
              <p class="card-text small mb-2">
                <i class="fas fa-home me-1"></i> <%= listing.propertyType %> 
                | <%= listing.bhkType %>
              </p>

              <!-- Bedrooms & Bathrooms -->
              <p class="card-text small mb-2">
                <i class="fas fa-bed me-1"></i> <%= listing.bedrooms %> BR 
                | <i class="fas fa-bath ms-2 me-1"></i> <%= listing.bathrooms %> Bath
              </p>

              <!-- View Button -->
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-primary">
                <i class="fas fa-eye me-1"></i> View Details
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-muted">No properties in your wishlist yet.</p>
  <% } %>
</div>
