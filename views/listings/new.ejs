<% layout("./layouts/boilerplate") %>

<body>
    <br><br>
    <h1>Create a New Listing</h1>

    <form method="post" class="needs-validation" novalidate action="/listings" enctype="multipart/form-data">
        <div class="row">
            <div class="col-8 offset-2">

                <!-- Title -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input class="form-control" name="listing[title]" type="text" required />
                    <div class="invalid-feedback">Please enter a valid title.</div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" name="listing[description]" required></textarea>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>

                <!-- Image URL -->
                <div class="mb-3">
              
                     <label class="form-label" for="image">Image File</label>
                    <input class="form-control" name="listing[image]" type="file" required />
                </div>


                <div class="row">
                    <!-- Price -->
                    <div class="mb-3 col-md-8">
                        <label class="form-label" for="price">Price</label>
                        <input class="form-control" name="listing[price]"  required />
                        <div class="invalid-feedback">Please enter a valid price (greater than 0).</div>
                    </div>

                    <!-- Country -->
                    <div class="mb-3 col-md-4">
                        <label class="form-label" for="country">Country</label>
                        <input class="form-control" name="listing[country]" type="text" required />
                        <div class="invalid-feedback">Please enter a country name.</div>
                    </div>
                </div>

                <!-- Location -->
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" name="listing[location]" type="text" required />
                    <div class="invalid-feedback">Please enter a location.</div>
                </div>

                <!-- Submit Button -->
                <button class="btn btn-primary" type="submit">Submit</button>

            </div>
        </div>
    </form>
</body>
