<% layout("./layouts/boilerplate") %>

<div class="container mt-5">
  <h3 class="mb-4"><i class="fas fa-home me-2"></i>All Listed Properties</h3>

  <% if(listings.length === 0){ %>
    <p>You have no listings yet.</p>
  <% } else { %>
    <div class="row g-4">
      <% listings.forEach(l => { %>
        <div class="col-md-6">
          <div class="card shadow-sm rounded-4">
            <img src="<%= l.featuredImage?.url || 'https://placehold.co/600x400' %>" class="card-img-top" style="height: 250px; object-fit: cover;" alt="<%= l.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= l.title %></h5>
              <p class="card-text text-secondary"><%= l.city %>, <%= l.area %></p>
              <p class="fw-bold">â‚¹<%= l.price.toLocaleString("en-IN") %> / month</p>
              <a href="/listings/<%= l._id %>" class="btn btn-primary w-100">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
