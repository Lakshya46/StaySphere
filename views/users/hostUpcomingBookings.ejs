<% layout("./layouts/boilerplate") %>

<div class="container my-5">
  <!-- Page Header -->
  <h3 class="mb-5 text-primary fw-bold text-start">
    <i class="fas fa-door-open me-2"></i>Guest Bookings
  </h3>

  <% if (bookings.length === 0) { %>
    <div class="alert alert-info rounded-5 shadow-lg text-center py-5 fs-5">
      <i class="fas fa-info-circle me-2 fs-3"></i>No bookings found.
    </div>
  <% } else { %>
    <div class="row g-4">
      <% bookings.forEach(b => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="booking-card overflow-hidden rounded-4 shadow-lg"
               onclick="window.location.href='/listings/<%= b.listing._id %>/booking/<%= b._id %>'">

            <!-- Image -->
            <div class="card-image-wrapper">
              <% if (b.listing.featuredImage) { %>
                <img src="<%= b.listing.featuredImage.url %>" alt="property" class="card-image">
              <% } else { %>
                <div class="card-image bg-light d-flex align-items-center justify-content-center">
                  <i class="fas fa-home text-secondary fs-1"></i>
                </div>
              <% } %>
              <div class="card-image-overlay"></div>
            </div>

            <!-- Card Body -->
            <div class="card-body p-4 d-flex flex-column gap-3">

              <!-- Guest Info -->
              <div class="d-flex align-items-center gap-3 border-bottom pb-3">
                <% if (b.user.avatar) { %>
                  <img src="<%= b.user.avatar %>" alt="guest" class="guest-avatar">
                <% } else { %>
                  <div class="guest-avatar bg-light d-flex align-items-center justify-content-center">
                    <i class="fas fa-user text-secondary fs-4"></i>
                  </div>
                <% } %>

                <div class="guest-info">
                  <h5 class="fw-bold text-primary mb-1"><%= b.user.username %></h5>
                  <% if (b.user.email) { %>
                    <p class="small text-muted mb-1">
                      <i class="fas fa-envelope me-1"></i><%= b.user.email %>
                    </p>
                  <% } %>
                  <% if (b.user.phone) { %>
                    <p class="small text-muted mb-0">
                      <i class="fas fa-phone me-1"></i><%= b.user.phone %>
                    </p>
                  <% } else { %>
                    <p class="small text-muted mb-0">
                      <i class="fas fa-phone-slash me-1"></i>Not provided
                    </p>
                  <% } %>
                </div>
              </div>

              <!-- Booking Info -->
              <div class="d-flex flex-column gap-2">
                <h6 class="fw-semibold text-dark mb-0"><%= b.listing.title %></h6>
                <% if (b.listing.city) { %>
                  <p class="small text-muted mb-0">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= b.listing.city %>
                  </p>
                <% } %>

                <p class="small text-muted mb-0">
                  <i class="fas fa-calendar-check me-1 text-success"></i>
                  <%= new Date(b.startDate).toLocaleDateString('en-IN', { day:'numeric', month:'short', year:'numeric' }) %>
                  &nbsp;→&nbsp;
                  <i class="fas fa-calendar-times me-1 text-danger"></i>
                  <%= new Date(b.endDate).toLocaleDateString('en-IN', { day:'numeric', month:'short', year:'numeric' }) %>
                </p>
              </div>

              <!-- Price & Status -->
              <div class="d-flex justify-content-between align-items-center border-top pt-3 mt-2 flex-wrap gap-2">
                <div class="fw-bold text-success fs-5">
                  ₹<%= b.totalPrice.toLocaleString("en-IN") %>
                </div>
                <span class="status-badge <%= 
                  b.status === 'confirmed' ? 'status-confirmed' : 
                  b.status === 'pending' ? 'status-pending' : 
                  'status-cancelled' 
                %>">
                  <%= b.status %>
                </span>
              </div>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<style>
.booking-card {
  transition: all 0.35s ease;
  cursor: pointer;
  background: #fff;
  display: flex;
  flex-direction: column;
  position: relative;
}
.booking-card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 50px rgba(0,0,0,0.18);
}

/* Image */
.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 200px;
  overflow: hidden;
}
.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}
.booking-card:hover .card-image {
  transform: scale(1.05);
}
.card-image-overlay {
  position: absolute;
  top:0; left:0; width:100%; height:100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.05), rgba(0,0,0,0.2));
}

/* Avatar */
.guest-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 2px solid #4dabf7;
  object-fit: cover;
}

/* Status */
.status-badge {
  display: inline-block;
  padding: 5px 12px;
  font-size: 0.8rem;
  font-weight: 600;
  border-radius: 25px;
  text-transform: capitalize;
}
.status-confirmed { background: #d1f7dc; color: #2a7f37; }
.status-pending { background: #fff3cd; color: #856404; }
.status-cancelled { background: #f8d7da; color: #842029; }

/* Typography & spacing */
h5 { font-size: 1.05rem; }
h6 { font-size: 0.95rem; }
p.small { font-size: 0.85rem; }
.card-body { min-height: 250px; }

/* Responsive */
@media (max-width: 768px) {
  .guest-avatar { width: 50px; height: 50px; }
  .card-body { padding: 1.2rem; }
  .booking-card { border-radius: 1rem; }
}
</style>
