<% layout("./layouts/boilerplate") %>

<div class="container my-5">
  <h2 class="mb-4 text-primary text-center">
    <i class="fas fa-heart me-2 text-danger"></i> My Wishlist
  </h2>

  <% if (wishlist.length > 0) { %>
    <div class="row g-4">
      <% wishlist.forEach(listing => { %>
        <div class="col-md-4 col-sm-6">
          <div class="card shadow-sm h-100 wishlist-card">
            
            <!-- Image -->
            <a href="/listings/<%= listing._id %>">
              <img src="<%= listing.featuredImage?.url || 'https://placehold.co/400x300' %>" 
                   class="card-img-top listing-img" 
                   alt="<%= listing.title %>">
            </a>

            <!-- Card Body -->
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <!-- Title -->
                <h5 class="card-title mb-2">
                  <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                    <%= listing.title %>
                  </a>
                </h5>

                <!-- Location -->
                <p class="text-muted mb-1">
                  <i class="fas fa-map-marker-alt me-1 text-danger"></i>
                  <%= listing.city %>, <%= listing.country %>
                </p>

                <!-- Price -->
                <p class="fw-bold text-primary mb-2">
                  <i class="fas fa-tag me-1 text-success"></i>
                  â‚¹<%= listing.price.toLocaleString() %> / <%= listing.stayType %>
                </p>

                <!-- Property Type + BHK (only if flat) -->
                <p class="small mb-1">
                  <i class="fas fa-home me-1 text-warning"></i>
                  <%= listing.propertyType %>
                  <% if(listing.propertyType.toLowerCase() === 'flat'){ %>
                    | <%= listing.bhkType %> 
                  <% } %>
                </p>
              </div>

              <!-- View Button -->
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-primary mt-3 w-100">
                <i class="fas fa-eye me-1"></i> View Details
              </a>
            </div>

          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info text-center py-4">
      <i class="fas fa-heart-broken fa-2x mb-2 text-danger"></i>
      <p class="mb-0">No properties in your wishlist yet.</p>
    </div>
  <% } %>
</div>

<style>
/* Card styling */
.wishlist-card {
  border-radius: 15px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.wishlist-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.15);
}

/* Image */
.listing-img {
  height: 200px;
  object-fit: cover;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
}

/* Button hover */
.wishlist-card .btn-primary {
  transition: all 0.3s ease;
}
.wishlist-card .btn-primary:hover {
  background-color: #0b5ed7;
  transform: translateY(-2px);
}

/* Icon colors */
.text-danger { color: #ff385c !important; }   /* Airbnb red */
.text-success { color: #008a5a !important; }  /* Price green */
.text-warning { color: #f9a825 !important; }  /* Warm yellow */

/* Mobile adjustments */
@media (max-width: 767px) {
  .listing-img { height: 180px; }
}
</style>
