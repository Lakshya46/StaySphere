<% layout("./layouts/boilerplate") %>

<div class="container mt-4">
  <h1 class="mb-4 text-center">Guests Who Booked Your Listings</h1>

  <% if (bookings.length === 0) { %>
    <div class="alert alert-info text-center">
      No one has booked your listings yet.
    </div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-person-circle"></i> <%= booking.user.username %>
              </h5>
              <p class="card-text">
                <strong>Listing:</strong> <%= booking.listing.title %> <br>
                <strong>Status:</strong> 
                <span class="badge 
                  <%= booking.status === 'approved' ? 'bg-success' : 
                      booking.status === 'rejected' ? 'bg-danger' : 'bg-warning text-dark' %>">
                  <%= booking.status %>
                </span>
              </p>
            </div>
            <div class="card-footer text-center">
              <a href="/listings/<%= booking.listing._id %>" class="btn btn-sm btn-outline-primary">
                View Listing
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
