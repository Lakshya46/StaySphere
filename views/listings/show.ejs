<% layout("./layouts/boilerplate") %>

<body class="bg-light">
  <div class="container my-4">

    <!-- Listing Details -->
    <div class="card shadow-sm border-0 rounded-3 mb-4">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image" style="max-height: 400px; object-fit: cover;" />

      <div class="card-body">
        <h3 class="fw-bold mb-2"><%= listing.title %></h3>
        <p class="text-muted mb-1">Hosted by <b><%= listing.owner.username %></b></p>
        <p class="mb-2"><%= listing.description %></p>
        <p class="fw-semibold">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
        <p class="text-secondary"><i class="fa-solid fa-location-dot me-2"></i><%= listing.country %></p>

        <% if (currentuser && currentuser._id.equals(listing.owner._id)) { %>
          <div class="d-flex gap-2 mt-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Booking Form -->
    <div class="card shadow-sm border-0 rounded-3 p-4 mb-4">
      <h5 class="fw-semibold mb-3">Book This Listing</h5>
      <form action="/listings/<%= listing._id %>/booking" method="POST">
        <div class="row g-3">
          <div class="col-md-4">
            <label class="form-label">Start Date</label>
            <input type="date" name="checkIn" required class="form-control">
          </div>
          <div class="col-md-4">
            <label class="form-label">End Date</label>
            <input type="date" name="checkOut" required class="form-control">
          </div>
          <div class="col-md-4">
            <label class="form-label">Guests</label>
            <input type="number" name="guests" min="1" required class="form-control">
          </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Book Now</button>
      </form>
    </div>

    <!-- Review Section -->
    <% if (currentuser) { %>
      <div class="card shadow-sm border-0 rounded-3 p-4 mb-4">
        <h5 class="fw-semibold">Leave a Review</h5>
        <form class="needs-validation mt-3" novalidate method="POST" action="/listings/<%= listing._id %>/reviews">
          
          <!-- Rating -->
          <fieldset class="starability-coinFlip mb-3">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5">5 stars</label>
          </fieldset>

          <!-- Comment -->
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea required name="review[comment]" id="comment" rows="3" class="form-control"></textarea>
            <div class="invalid-feedback">Please add some comment for review</div>
          </div>

          <button class="btn btn-success">Submit</button>
        </form>
      </div>
    <% } %>

    <!-- All Reviews -->
    <div class="mt-4">
      <h5 class="fw-semibold mb-3">All Reviews</h5>
      <div class="row">
        <% listing.reviews.forEach(review => { %>
          <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body">
                <p class="mb-1"><strong><i class="fa-regular fa-user me-2"></i><%= review.author.username %></strong></p>
                <p class="text-muted mb-2"><%= review.comment %></p>
                <p class="starability-result" data-rating="<%=review.rating%>"></p>

                <% if (currentuser && currentuser._id.equals(review.author._id)) { %>
                  <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

  </div>
</body>
